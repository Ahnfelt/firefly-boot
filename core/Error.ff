data Error {}

extend self: Error {

    rethrow[T](): T {
        Js.throw(self!)
    }

    name(): String {
        self!->name.coalesce("")?
    }

    message(): String {
        self!->message.coalesce("")?
    }

    stack(): String {
        self!->stack.coalesce("")?
    }

    exception(): Option[Any] {
        if(!self!->ffException.isNullOrUndefined()) {self!->ffException?}
    }

}
